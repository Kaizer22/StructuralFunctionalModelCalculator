<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <TextView
        android:id="@+id/function_priority"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:text="10"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sfm_function_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="P3
Среднее количество
отказов за
оцениваемый период
эксплуатации
(ед. изм. - отказ)"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/function_priority"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sfm_function_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:text="На основе базовой структурно-функциональная модели ИС (правая часть таблицы 1)
для дальнейших расчетов целесообразно составить матрицу базовых значений показателей
качества (BQ) – формула (2):иям."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/button_delete_function"
        app:layout_constraintStart_toStartOf="@+id/sfm_function_unit_title"
        app:layout_constraintTop_toBottomOf="@+id/sfm_function_unit_value"/>

    <TextView
        android:id="@+id/sfm_function_unit_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Структурное подразделение:"
        android:textColor="@color/black"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sfm_function_name" />

    <TextView
        android:id="@+id/sfm_function_unit_value"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Подразделение номер 54932832904580329485039485023948509328450328450983240"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@+id/button_delete_function"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sfm_function_unit_title"
        app:layout_constraintTop_toBottomOf="@+id/sfm_function_unit_title" />

    <ImageButton
        android:visibility="gone"
        android:id="@+id/button_delete_function"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/icon_delete"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:visibility="gone"
        android:id="@+id/button_up_function_priority"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/up_arrow"
        app:layout_constraintBottom_toTopOf="@+id/button_delete_function"
        app:layout_constraintEnd_toEndOf="@+id/button_delete_function"
        app:layout_constraintStart_toStartOf="@+id/button_delete_function"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <ImageButton
        android:visibility="gone"
        android:id="@+id/button_down_function_priority"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/down_arrow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button_delete_function"
        app:layout_constraintStart_toStartOf="@+id/button_delete_function"
        app:layout_constraintTop_toBottomOf="@+id/button_delete_function"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>