<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialog_indicator_base_max_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Базовый Макс. :"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dialog_indicator_base_max_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="10000000"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_indicator_base_max_title"
        app:layout_constraintStart_toEndOf="@+id/dialog_indicator_base_max_title"
        app:layout_constraintTop_toTopOf="@+id/dialog_indicator_base_max_title" />

    <TextView
        android:id="@+id/dialog_indicator_base_min_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        android:text="Базовый Мин. :"
        app:layout_constraintStart_toStartOf="@+id/dialog_indicator_base_max_title"
        app:layout_constraintTop_toBottomOf="@+id/dialog_indicator_base_max_title" />

    <TextView
        android:id="@+id/dialog_indicator_base_min_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:text="10000000"
        app:layout_constraintBottom_toBottomOf="@+id/dialog_indicator_base_min_title"
        app:layout_constraintStart_toStartOf="@+id/dialog_indicator_base_max_value"
        app:layout_constraintTop_toTopOf="@+id/dialog_indicator_base_min_title" />

    <TextView
        android:id="@+id/dialog_indicator_min_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Реальное Мин. значение: "
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/dialog_indicator_base_min_title"
        app:layout_constraintTop_toBottomOf="@+id/dialog_indicator_base_min_title" />

    <TextView
        android:id="@+id/dialog_indicator_max_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Реальное Макс. значение:"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/dialog_indicator_min_title"
        app:layout_constraintTop_toBottomOf="@+id/dialog_indicator_min_value" />

    <EditText
        android:id="@+id/dialog_indicator_min_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_indicator_min_title" />

    <EditText
        android:id="@+id/dialog_indicator_max_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_indicator_max_title" />

</androidx.constraintlayout.widget.ConstraintLayout>